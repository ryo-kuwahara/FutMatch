<!DOCTYPE html>
<html>
  <head>
    <title>FutMatch</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Kosugi+Maru&display=swap&subset=japanese" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Bangers|Marck+Script|Monoton|Rubik+Mono+One&display=swap" rel="stylesheet">
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
      </button>
        <a href="/" class="navbar-brand"><i class="fas fa-futbol fa-spin l-fas fa-lg"></i><span class="fut">FutMatch</span><i class="fa-lg fas fa-futbol fa-spin r-fas"></i></a>
    </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <% if team_signed_in? %>
          <li class="dropdown active">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Team情報<span class="caret"></span></a>
            	<ul class="dropdown-menu" role="menu">
    					  <li><%= link_to "Team一覧", teams_path %></li>
    						<li><%= link_to "申請・承認", friends_path %></li>
            	</ul>
    			</li> 
    			<li><a href="/rooms">メッセージ</a></li>
    			 <li class="dropdown active">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">対戦情報<span class="caret"></span></a>
            	<ul class="dropdown-menu" role="menu">
    					 <li><a href="/match_reqs/new">対戦作成</a></li>
               <li><a href="/match_reqs">対戦募集一覧</a></li>
            	</ul>
    			</li> 
          <li><a href="/facilities">施設一覧</a></li>
           <li class="dropdown active">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">マイページ<span class="caret"></span></a>
            	<ul class="dropdown-menu" role="menu">
    					  <li><%= link_to Team.find_by(id: current_team.id).name, "/teams/#{current_team.id}" %></li>
    						<li><%= link_to "ログアウト",destroy_team_session_path, :method => :delete %></li>
            	</ul>
    			</li> 
        <% else %>
          <li><a href="/teams/sign_up">登録する</a></li>
          <li><a href="/teams/sign_in">ログインする</a></li>
        <% end %>
          </ul>
        </div>
      </ul>
      </div>
  </div>
</nav>

    <div class="container main-page">
      <% if notice %>
    <br>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <br>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

       <%= yield %>
    </div>
  </body>
</html>



