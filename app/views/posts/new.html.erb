<h1>ニュースを作成</h1>
<hr>
<%= form_for @post do |f| %>
<%= f.label :image, "画像" %><br />
<%= f.file_field :image %>
<h3>タイトル</h3>
<%= f.text_field :title,:class => "form-control my-form" %>
<h3>内容</h3>
<%= f.text_area :content,:class => "form-control my-form" %>
<hr>
<p><%= f.submit "登録する", :class => "btn-gradient-3d" %></p>
<% end %>
<a href="/posts" class="btn-gradient-3d">トップに戻る</a>