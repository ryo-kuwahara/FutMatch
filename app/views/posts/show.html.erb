<h1>投稿</h1>
<hr>
    <% if @post.image.present? %>
        <%= image_tag @post.image.to_s, :class => "img-100" %>
    <% else %>
    
    
    
    <% end %>
<h3>タイトル</h3>
    <%= @post.title %>
<h3>内容</h3>
    <%= @post.content %>
<hr>
<% if current_team.id == 0 %>
    <p><a href="/posts/<%= @post.id %>/edit" class="btn-gradient-3d">編集する</a></p>
    <a href="/posts/<%= @post.id %>" data-method="delete" class="btn-gradient-3d">削除する</a>
<% else %>
    <p><a href="/posts" class="btn-gradient-3d">トップに戻る</a></p>
<% end %>