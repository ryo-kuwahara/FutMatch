<h1>施設情報</h1>
<hr>
<h3>施設名</h3>
<h4><%= @facility.name %></h4>
<h3>画像</h3>
    <% if @facility.image.present? %>
        <%= image_tag @facility.image.to_s, :class => "img-400" %>
    <% else %>
    <% end %>
<h3>住所</h3>
<h4><%= @facility.address %></h4>
<h3>電話番号</h3>
<h4><%= @facility.tel %></h4>
<hr>
<% if current_team.id == 0 %>
<p><a href="/facilities/<%= @facility.id %>/edit" class="btn-gradient-3d">施設情報を編集する</a></p>
<a href="/facilities/<%= @facility.id %>" data-method="delete" class="btn-gradient-3d">削除する</a>
<% else %>
<% end %>