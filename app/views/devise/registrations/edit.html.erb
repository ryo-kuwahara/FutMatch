<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control my-form" %>
  </div>

  <div class="field">
    <%= f.label :name,"名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "form-control my-form" %>
  </div>

  <div class="field">
    <%= f.label :rank,"ランク" %><br />
    <%= f.text_field :rank, autofocus: true, autocomplete: "rank", :class => "form-control my-form" %>
  </div>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
  </div>

  <div class="field">
    <%= f.label :cat,"カテゴリー" %><br />
    <%= f.select :cat, [["関東リーグ", "a"], ["都道府県リーグ", "b"],["競技志向", "c"], ["エンジョイ", "d"]],  :prompt => "選択してください" , :class => "form-control my-form"%>
  </div>

  <div class="field">
    <%= f.label :age_ave,"平均年齢" %><br/>
    <%= f.number_field :age_ave, autofocus: true, autocomplete: "age_ave", :class => "form-control my-form" %>
  </div>

  <div class="field">
    <%= f.label :pref,"都道府県" %><br />
   <%= f.select :pref, [["東京都", 1], ["埼玉県", 2],["千葉県", 3], ["栃木県", 4],["神奈川県", 5], ["茨城県", 6],["山梨県", 7]],  :prompt => "選択してください", :class => "form-control my-form" %>
  </div>

  <div class="field">
    <%= f.label :facility,"施設" %><br />
    <%= f.text_field :facility, autofocus: true, autocomplete: "facility", :class => "form-control my-form" %>
  </div>

  <div class="field">
    <%= f.label :profile,"プロフィール" %><br />
    <%= f.text_area :profile, autofocus: true, autocomplete: "profile" , :class => "form-control my-form"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" , :class => "form-control my-form"%>
  </div>

  <div class="actions">
    <br>
    <%= f.submit "Update", :class => "btn btn-primary" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "btn btn-warning" %></p>

<%= link_to "Back", :back %>
