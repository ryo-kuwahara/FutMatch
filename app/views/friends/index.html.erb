<h1>友達一覧</h1>
<hr>

<h3><i class="fab fa-creative-commons-sampling"></i>申請中<i class="fab fa-creative-commons-sampling"></i></h3>
<% if @request_friends.present? %>
    <% @request_friends.each do |r| %>
   <% logger.debug("================== #{r}")%>
        <%= link_to  "/teams/#{r}" do %>
        <%= image_tag Team.find(r).image.to_s, :class => "img-30" %>
        <% end %>
        <%= link_to Team.find(r).name, "/teams/#{r}" %>
    <% end %>
<% end %>
    <hr>
<h3>承認待ち</h3>
<% if @receive_friends.present? %>
    <% @receive_friends.each do |r| %>
        <%= link_to  "/teams/#{r}" do %>
        <%= image_tag Team.find(r).image.to_s, :class => "img-30" %>
        <% end %>
        <%= link_to Team.find(r).name, "/teams/#{r}" %>
    <% end %>
<% end %>

    <hr>
        <h3><i class="fas fa-user-friends fa-2px"></i>友達<i class="fas fa-user-friends fa-2px"></i></h3>
<% if @friends.present? %>
    <% @friends.each do |r| %>
    <div>
        <%= link_to  "/teams/#{r}" do %>
        <%= image_tag Team.find(r).image.to_s, :class => "img-30" %>
        <% end %>
        <%= link_to Team.find(r).name, "/teams/#{r}" %>
    </div>
    <% end %>
<% end %>
 <hr>



